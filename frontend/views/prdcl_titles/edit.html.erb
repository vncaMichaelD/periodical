<%= setup_context :object => @prdcl_title, :title => @prdcl_title.title %>

<%= form_for @prdcl_title, :as => "prdcl_title", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form'}.merge(update_monitor_params(@prdcl_title)) do |f| %>
  <%= form_context :prdcl_title, @prdcl_title do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "prdcl_titles/sidebar" %>
      </div>
      <div class="col-md-9">
        <%= render_aspace_partial :partial => "toolbar" %>
        <div class="record-pane">
          <%= link_to_help :topic => "prdcl_title" %>
          <h2><%= @prdcl_title.title %>  <span class="label label-info"><%= I18n.t("prdcl_title._singular") %></span></h2>
          <br/>
          <%= render_aspace_partial :partial => "prdcl_titles/form", :locals => {:form => form} %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary"><%= I18n.t("prdcl_title._frontend.action.save") %></button>
            <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
